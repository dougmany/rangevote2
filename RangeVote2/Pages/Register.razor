@page "/register"
@using RangeVote2.Data
@inject IAuthenticationService AuthService
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IThemeService ThemeService

<PageTitle>@ThemeService.GetText("join_action") - range.vote</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-brand">@ThemeService.GetEmoji("animal") range.vote</h1>
            <p class="auth-tagline">@ThemeService.GetText("tagline")</p>
        </div>

        <h2>@ThemeService.GetText("join_action")</h2>

        <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
            <DataAnnotationsValidator />
            <ValidationSummary />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success" role="alert">
                    @successMessage
                </div>
            }

            <div class="form-group">
                <label for="email">Email</label>
                <InputText id="email" class="form-control" @bind-Value="registerModel.Email" placeholder="bessie@farm.com" />
                <ValidationMessage For="@(() => registerModel.Email)" />
            </div>

            <div class="form-group">
                <label for="displayName">Display Name</label>
                <InputText id="displayName" class="form-control" @bind-Value="registerModel.DisplayName" placeholder="What should we call you?" />
                <ValidationMessage For="@(() => registerModel.DisplayName)" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="registerModel.Password" placeholder="Choose a secure password" />
                <ValidationMessage For="@(() => registerModel.Password)" />
                <small class="form-text">Minimum 6 characters</small>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="registerModel.ConfirmPassword" placeholder="Confirm your password" />
                <ValidationMessage For="@(() => registerModel.ConfirmPassword)" />
            </div>

            <div class="form-group">
                <label for="organizationName">Start a @ThemeService.GetText("group") (Optional)</label>
                <InputText id="organizationName" class="form-control" @bind-Value="registerModel.OrganizationName" placeholder="e.g., My Team, Project Group" />
                <small class="form-text">Create a @ThemeService.GetText("group").ToLower() for collaborative decision-making</small>
            </div>

            <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                @(isLoading ? "Creating account..." : ThemeService.GetText("join_action") + " " + ThemeService.GetEmoji("animal"))
            </button>
        </EditForm>

        <div class="auth-footer">
            <p>Already have an account? <a href="/login">@ThemeService.GetText("enter_action")</a></p>
        </div>
    </div>
</div>

@code {
    private RegisterModel registerModel = new RegisterModel();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var user = await AuthService.RegisterAsync(registerModel);

            if (user == null)
            {
                errorMessage = "That email is already tagged. Try another or enter the barn!";
                isLoading = false;
                return;
            }

            successMessage = "Welcome to the herd! üêÑ Moooo-ving you to the pastures...";

            await AuthStateProvider.MarkUserAsAuthenticated(user);

            // Small delay to show success message
            await Task.Delay(1000);
            Navigation.NavigateTo("/decisions", true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Something went wrong: {ex.Message}";
            isLoading = false;
        }
    }
}
